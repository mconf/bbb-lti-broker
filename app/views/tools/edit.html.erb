<div class="registration-form container">
    <h3><%= t('tool.edit') %></h3>
    <%= form_tag(tool_path(@tool.uuid), method: :patch) do %>
        <%= content_tag :div, class: "form-group row" do %>
            <%= label_tag(:uuid, t('tool.uuid') + ':', class: "col-sm-2 col-form-label") %>
            <%= content_tag :div, class: "col-sm-10 col" do %>
                <%= text_field_tag(:uuid, @tool.uuid, size: 90, class: 'form-control', required: true) %>
            <% end %>
        <% end %>
        <%= content_tag :div, class: "form-group row" do %>
            <%= label_tag(:shared_secret, t('tool.shared_secret') + ':', class: "col-sm-2 col-form-label") %>
            <%= content_tag :div, class: "col-sm-10 col" do %>
                <%= text_field_tag(:shared_secret, @tool.shared_secret, size: 90, class: 'form-control', required: true) %>
            <% end %>
        <% end %>
        <%= content_tag :div, class: "form-group row" do %>
            <%= label_tag(:tenant_id, t('tool.tenant') + ':', class: "col-sm-2 col-form-label") %>
            <%= content_tag :div, class: "col-sm-10 col" do %>
                <%= select(:tool, :tenant_id, @tenants, {}, { class: 'form-control' }) %>
            <% end %>
        <% end %>
        <%= submit_tag(t('ui.submit'), class: 'btn btn-success') %>
        <%= link_to t('ui.cancel'), registration_list_url, class: 'btn btn-secondary' %>
    <% end %>
</div>
